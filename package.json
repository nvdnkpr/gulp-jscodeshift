  "scripts": {
    "serve:coverage": "live-server --port=1234 coverage",
    "prebuild": "gulp clean",
    "build": "gulp build",
    "test": "nyc mocha"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ]
    },
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true,
    "include": [
      "src/lib/**/*.ts"
    ],
    "exclude": [
      "test/**/*.js"
    ]
  }
